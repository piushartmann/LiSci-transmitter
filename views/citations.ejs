<!DOCTYPE html>
<html lang="de">

<head>
  <%- include("./partials/baseHead.ejs") %>

  <link rel="stylesheet" href="/css/citations.css">
  <script src="/js/citations.js"></script>
  <title>Zitate</title>
</head>

<body>
  <%- include("./partials/header.ejs") %>

  <div class="newCitationBox">
    <h1>Ein neues Zitat einreichen</h1>
    <form action="/internal/createCitation" method="POST">
      <div class="sentenceStructure">
        <input type="text" name="author" id="author" placeholder="Herr Treetzen" pattern='[^"]+' required>
        <p> hat </p>
        <input type="text" name="content" id="content" placeholder="ein lustiges Zitat" pattern='[^"]+' required>
        <p> gesagt.</p>
      </div>
      <button id="citationSubmit" onclick="submitCitation()">Submit</button>
    </form>
  </div>

  <h1>Zitate</h1>
  <div class="citationsBox" id="citationBox">
  </div>


</body>

</html>