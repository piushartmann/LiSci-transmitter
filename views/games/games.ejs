<!DOCTYPE html>
<html lang="de">

<head>
  <%- include("../partials/baseHead.ejs") %>
  <title>Games</title>
  <link rel="stylesheet" href="/css/games/games.css">
  <script src="/js/games/games.js"></script>
</head>

<body>
  <%- include("../partials/header.ejs") %>

  <div class="gameBox">

    <% for( let i = 0; i < games.length; i++ ) { %>
    <div class="game">
      <h2><%= games[i].title %></h2>
      <p> <%= games[i].description %> </p>
      <% if (games[i].singleplayer) { %>
      <button onclick="playSinglePlayer('<%= games[i].name %>')">Play alone</button>
      <% } %>
      <% if (games[i].multiplayer) { %>
      <button class="connectButton" onclick="discoverOtherPlayers('<%= games[i].name %>')">Search for other Players</button>
      <% } %>
    </div>
    <% } %>

  </div>

  <div id="connectionModal" class="modal">
    <span id="modalClose" class="close" title="Close Modal">&times;</span>

    <form class="modal-content animate">

      <h1 id="title">Mit wem m√∂chtest du dich verbinden?</h1>

      <div id="playerConnections">

      </div>

    </form>
  </div>

  </div>

</body>

</html>